<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="pos_product_detail.ClosePosPopup" t-inherit="point_of_sale.ClosePosPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('modal-footer-right')]"
               position="inside">
            <button class="button icon btn btn-lg btn-secondary"
                    t-on-click="showProductDetails">
                Show Details
            </button>
        </xpath>
    </t>
</templates>
