<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_partner_autofill" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.partner.autofill</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="Partner Address Autofill" string="Partner Address Autofill">
                    <h2>Partner Address Autofill</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="google_places_api_key" password="True"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="google_places_api_key"/>
                                <div class="text-muted">
                                    Set your Google Places API Key. The key must have Places and Maps JavaScript API enabled.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
