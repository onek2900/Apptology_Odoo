<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_pos_places" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.apptology_pos_places</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_terminals_section']" position="after">
                <block string="Address Autofill (Google Places)" id="pos_google_places_section">
                    <setting id="apptology_pos_places_setting" string="Google Places Autocomplete" help="Enable address autocomplete in POS customer editor using Google Places.">
                        <field name="apptology_google_places_autocomplete_enabled"/>
                    </setting>
                    <group class="mt16" invisible="not apptology_google_places_autocomplete_enabled">
                        <label for="apptology_google_places_api_key" string="Google Places API Key"/>
                        <div class="o_row">
                            <field name="apptology_google_places_api_key" placeholder="AIza..."/>
                        </div>
                        <p class="text-muted">
                            Ensure the key has the Places API enabled and is allowed for your POS domain(s).
                        </p>
                    </group>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
