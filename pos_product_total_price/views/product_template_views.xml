<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to add total price field-->
    <record id="product_template_view_form" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.total_price
        </field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']/label[@for='list_price']" position="before">
                <label for="total_price"/>
                <div name="total_pricing" class="o_row">
                    <field name="total_price" class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>