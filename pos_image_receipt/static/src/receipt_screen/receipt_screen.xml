<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_image_receipt.ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('buttons')]" position="inside">
             <button class="button print btn btn-lg btn-secondary w-100 py-3 my-2" t-on-click="downloadReceipt">
                <i class="fa fa-file-image-o ms-2" t-ref="order-download-receipt-button"/> Download Receipt
            </button>
        </xpath>
    </t>
</templates>