<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_pos_note.CreateNotePopupWidget">
        <div class="popup popup-import product-configurator-popup global_note_popup">
            <div class="modal-header">
                <h4 class="modal-title title drag-handle">
                    Add New Note
                </h4>
            </div>
            <main class="body modal-body note_body">
                <textarea id="textarea_note" class="form-control" rows="2" cols="30" t-model="value.notes">
                </textarea>
            </main>
            <footer class="footer modal-footer">
                <div class="button cancel btn btn-lg btn-primary" t-on-click="confirm">
                    Save
                </div>
                <div class="button cancel btn btn-lg btn-secondary" t-on-click="cancel">
                    Cancel
                </div>
            </footer>
        </div>
    </t>

</templates>
