<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_mercury.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('after-footer')]" position="after">
            <t t-if="env.services.pos.config.display_order_note_receipt">
                <t t-if="props.data.order_global_note">
                    <br />
                    <div style="text-align: left;">
                        <span style="font-weight: bold;">Note:</span>
                        <span>
                            <p style="font-size: 13px;"><t t-esc="props.data.order_global_note" /></p>
                        </span>
                    </div>
                </t>
            </t>
        </xpath>
    </t>

</templates>