<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" >
        <xpath expr="//OrderWidget" position="before">
            <t t-if="env.services.pos.config.sh_return_print_receipt">
                <t t-if="env.services.pos.get_order().is_return_order">
                    <div class="sh_receipt_return" style="text-align: center;">
                        <b>Return Order</b>
                    </div>
                </t>
            </t>
            <t t-if="env.services.pos.config.sh_exchange_print_receipt">
                <t t-if="env.services.pos.get_order().is_exchange_order">
                    <div class="sh_receipt_return" style="text-align: center;">
                        <b>Exchange Order</b>
                    </div>
                </t>
            </t>
        </xpath>
    </t>
</templates>