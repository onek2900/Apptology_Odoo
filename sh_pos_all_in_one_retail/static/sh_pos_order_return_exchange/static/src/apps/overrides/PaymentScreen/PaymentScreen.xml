<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenTop" t-inherit="point_of_sale.PaymentScreenTop" t-inherit-mode="extension" >
        <xpath expr="//div[hasclass('back')]" position="after">
            <t t-if="pos.get_order().is_return_order">
                <div class="button cancel" t-on-click="() => pos.cancel_return_order()">
                    <span class="back_text">Cancel</span>
                </div>
            </t>
        </xpath>
    </t>
</templates>