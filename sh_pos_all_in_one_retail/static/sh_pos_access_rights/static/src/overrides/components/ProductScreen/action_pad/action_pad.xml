<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CustomerButton" t-inherit="point_of_sale.CustomerButton" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('customer-button')]" position="attributes">
            <t t-if="pos and pos.user and pos.user.groups_id and pos.config.group_select_customer and pos.config.group_select_customer[0]">
                <attribute name="t-att-class" >{'sh_disabled':pos.user.groups_id.indexOf(pos.config.group_select_customer[0]) !== -1}</attribute>
            </t>
        </xpath>
    </t>
    <t t-name="ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('set-partner')]" position="attributes">
            <t t-if="pos and pos.user and pos.user.groups_id and pos.config.group_select_customer and pos.config.group_select_customer[0]">
                <attribute name="t-att-class" >{'sh_disabled':pos.user.groups_id.indexOf(pos.config.group_select_customer[0]) !== -1}</attribute>
            </t>
        </xpath>
        <xpath expr="//button[hasclass('pay-order-button')]" position="attributes">
            <t t-if="pos and pos.user and pos.user.groups_id and pos.config.disable_payment_id and pos.config.disable_payment_id[0]">
                <attribute name="t-att-class" >{'sh_disabled':pos.user.groups_id.indexOf(pos.config.disable_payment_id[0]) !== -1}</attribute>
            </t>
        </xpath>
    </t>

</templates>