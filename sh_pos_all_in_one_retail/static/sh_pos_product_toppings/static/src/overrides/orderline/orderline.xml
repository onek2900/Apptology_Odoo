    <!-- Keep topping lines hidden on receipt by guarding the Orderline component -->
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//Orderline" position="attributes">
            <attribute name="t-if">!line.is_topping</attribute>
        </xpath>
    </t>

    <!-- Normal POS receipt custom lines: Qty first, then product; right column shows price (excl. tax). -->
    <t t-name="sh_pos_product_toppings.OrderReceiptLines" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <!-- Hide the default order lines rendering -->
        <xpath expr="//OrderWidget" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>

        <!-- Inject our custom compact lines before the hidden widget -->
        <xpath expr="//OrderWidget" position="before">
            <div class="pos-receipt-left-padding">
                <div style="display:flex; justify-content:space-between; font-weight:600; margin-bottom:4px;">
                    <span>Description</span>
                    <span>Price</span>
                </div>
                <div style="border-top:1px dotted #999; margin:2px 0 6px 0;"></div>
                <t t-foreach="props.data.orderlines" t-as="line" t-key="line.id">
                    <t t-if="!line.is_topping">
                        <t t-set="price_excl" t-value="line.priceWithoutTax || line.price_subtotal || line.price_subtotal_excl || 0"/>
                        <div style="display:flex; justify-content:space-between; margin:2px 0;">
                            <div>
                                <span><t t-esc="line.qty" /> </span>
                                <span><t t-esc="line.productName" /></span>
                            </div>
                            <div class="pos-receipt-right-align">
                                <t t-if="price_excl">
                                    <t t-esc="props.formatCurrency(price_excl)" />
                                </t>
                                <t t-else="">
                                    <t t-esc="line.price" />
                                </t>
                            </div>
                        </div>
                        <t t-if="line.customerNote">
                            <div class="pos-receipt-left-padding pos-receipt-customer-note" style="font-size:85%">
                                <i class="fa fa-pencil-square-o">&#160;<t t-esc="line.customerNote"/></i>
                            </div>
                        </t>
                        <t t-if="line.is_has_topping && line.Toppings && line.Toppings.length">
                            <div class="pos-receipt-left-padding" style="font-size:85%">
                                <t t-foreach="line.Toppings" t-as="topping" t-key="topping.id">
                                    <div>- <t t-esc="topping.full_product_name || (topping.product ? topping.product.display_name : '')" /></div>
                                </t>
                            </div>
                        </t>
                    </t>
                </t>
            </div>
        </xpath>
    </t>

</templates>
