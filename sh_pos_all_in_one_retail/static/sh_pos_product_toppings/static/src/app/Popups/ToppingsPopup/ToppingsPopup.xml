<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="sh_pos_product_toppings.ToppingsPopup">

        <div class="popup product-configurator-popup sh_global_topping_popup">
            <div class="modal-header">
                <h4 class="modal-title title">
                    <t t-if="hasGroups"><t t-esc="currentGroup.name"/></t>
                    <t t-else=""><t t-esc="props.title or 'Toppings'" /></t>
                </h4>
                <t t-if="hasGroups">
                    <div class="small text-muted">
                        <t t-esc="stepLabel"/>
                        <t>
                            <span class="ms-2">Min: <t t-esc="currentGroup.min || 0"/></span>
                            <span class="ms-2">Max: <t t-esc="currentGroup.max || 0"/></span>
                            <span class="ms-2">Selected: <t t-esc="currentSelectedCount()"/></span>
                        </t>
                    </div>
                </t>
            </div>
            <main class="modal-body sh_global_topping_popup_body">
                <div class="sh_global_topping_div">
                    <!-- Wizard view: show one group at a time -->
                    <t t-if="hasGroups">
                        <table class="table sh_group_products_list">
                            <tbody>
                                <t t-foreach="productsForGroup(currentGroup)" t-as="product" t-key="product.id">
                                    <t t-if="product">
                                        <tr class="topping-row" t-on-click="() => this._clicktoppigProduct(product)" t-att-data-product-id="product.id" t-att-class="{'selected': isSelected(product)}">
                                            <td class="indicator" width="24" t-if="isRadioMode()">
                                                <i t-if="isSelected(product)" class="fa fa-dot-circle-o"/>
                                                <i t-else="" class="fa fa-circle-o"/>
                                            </td>
                                            <td width="60">
                                                <img t-if="product.image_128" t-att-src="imageUrlFor(product)" t-att-alt="product.display_name" style="max-height:40px; max-width:56px;"/>
                                            </td>
                                            <td>
                                                <span class="topping-name"><t t-esc="product.display_name"/></span>
                                            </td>
                                            <td class="text-end actions" width="150">
                                                <span class="price-tag"><t t-esc="priceFor(product)"/></span>
                                                <button t-if="isSelected(product)" class="btn btn-sm btn-link text-danger ms-2" t-on-click="(ev) => removeTopping(ev, product)" title="Remove">
                                                    <i class="fa fa-times"/>
                                                </button>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <!-- Flat list fallback (no groups) -->
                    <t t-if="!hasGroups">
                        <t t-if="toppingProducts and toppingProducts.length > 0">
                            <table class="table sh_toppings_products_list">
                                <tbody>
                                    <t t-foreach="toppingProducts" t-as="product" t-key="product.id">
                                        <t t-if="product">
                                            <tr class="topping-row" t-on-click="() => this._clicktoppigProduct(product)" t-att-data-product-id="product.id" t-att-class="{'selected': isSelected(product)}">
                                                <td class="indicator" width="24" t-if="isRadioMode()">
                                                    <i t-if="isSelected(product)" class="fa fa-dot-circle-o"/>
                                                    <i t-else="" class="fa fa-circle-o"/>
                                                </td>
                                                <td width="60">
                                                    <img t-if="product.image_128" t-att-src="imageUrlFor(product)" t-att-alt="product.display_name" style="max-height:40px; max-width:56px;"/>
                                                </td>
                                                <td>
                                                    <span class="topping-name"><t t-esc="product.display_name"/></span>
                                                </td>
                                                <td class="text-end actions" width="150">
                                                    <span class="price-tag"><t t-esc="priceFor(product)"/></span>
                                                    <button t-if="isSelected(product)" class="btn btn-sm btn-link text-danger ms-2" t-on-click="(ev) => removeTopping(ev, product)" title="Remove">
                                                        <i class="fa fa-times"/>
                                                    </button>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </t>

                        <t t-if="globalToppings and globalToppings.length > 0">
                            <table class="table sh_global_toppings_list">
                                <tbody>
                                    <t t-foreach="globalToppings" t-as="product" t-key="product.id">
                                        <tr class="topping-row" t-on-click="() => this._clicktoppigProduct(product)" t-att-data-product-id="product.id" t-att-class="{'selected': isSelected(product)}">
                                            <td class="indicator" width="24" t-if="isRadioMode()">
                                                <i t-if="isSelected(product)" class="fa fa-dot-circle-o"/>
                                                <i t-else="" class="fa fa-circle-o"/>
                                            </td>
                                            <td width="60">
                                                <img t-if="product.image_128" t-att-src="imageUrlFor(product)" t-att-alt="product.display_name" style="max-height:40px; max-width:56px;"/>
                                            </td>
                                            <td>
                                                <span class="topping-name"><t t-esc="product.display_name"/></span>
                                            </td>
                                            <td class="text-end actions" width="150">
                                                <span class="price-tag"><t t-esc="priceFor(product)"/></span>
                                                <button t-if="isSelected(product)" class="btn btn-sm btn-link text-danger ms-2" t-on-click="(ev) => removeTopping(ev, product)" title="Remove">
                                                    <i class="fa fa-times"/>
                                                </button>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                </div>
            </main>
            <div class="footer modal-footer">
                <t t-if="hasGroups">
                    <div class="d-flex w-100 justify-content-between align-items-center gap-2">
                        <div class="button btn btn-lg btn-secondary" t-on-click="prevGroup" t-att-class="{'disabled': state.currentIndex === 0}">Previous</div>
                        <t t-if="state.currentIndex &lt; (groups.length - 1)">
                            <div class="button btn btn-lg btn-primary" t-on-click="nextGroup" t-att-class="{'disabled': !canProceedCurrent()}">Next</div>
                        </t>
                        <t t-if="isCurrentOptional()">
                            <div class="button btn btn-lg btn-outline-secondary" t-on-click="skipCurrent">Skip</div>
                        </t>
                        <div class="button cancel btn btn-lg btn-success" t-on-click="ClickOk" t-att-class="{'disabled': !canFinish()}">Done</div>
                    </div>
                </t>
                <t t-if="!hasGroups">
                    <div class="button cancel btn btn-lg btn-primary" t-on-click="ClickOk">
                        Ok
                    </div>
                </t>
            </div>
        </div>
    </t>
    
</templates>
