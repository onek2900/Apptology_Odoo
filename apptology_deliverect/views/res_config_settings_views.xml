<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.apptology_deliverect</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='restaurant_section']" position="after">
                <block title="Deliverect" id="deliverect_section">
                    <setting>
                        <div class="content-group">
                            <div class="row mt8">
                                <label for="client_id" class="col-lg-3 o_light_label">Client ID</label>
                                <field name="client_id" class="col-lg-9"/>
                            </div>
                            <div class="row mt8">
                                <label for="client_secret" class="col-lg-3 o_light_label">Client Secret</label>
                                <field name="client_secret" class="col-lg-9"/>
                            </div>
                            <div class="row mt8">
                                <label for="location_id" class="col-lg-3 o_light_label">Location ID</label>
                                <field name="location_id" class="col-lg-9"/>
                            </div>
                            <div class="row mt8">
                                <label for="account_id" class="col-lg-3 o_light_label">Account ID</label>
                                <field name="account_id" class="col-lg-9"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>