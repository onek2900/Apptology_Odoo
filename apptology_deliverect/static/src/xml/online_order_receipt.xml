<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="apptology_deliverect.OnlineOrderReceipt">
        <div class="pos-receipt">
            <img t-attf-src="/web/image?model=res.company&amp;id={{props.data.headerData.company.id}}&amp;field=logo"
                 alt="Logo" class="pos-receipt-logo"/>
            <br/>
            <div class="pos-receipt-contact">
            <!-- contact address -->
            <div t-if="props.data.headerData.company.partner_id?.[1]"
                 t-esc="props.data.headerData.company.partner_id[1]"/>
            <t t-if="props.data.headerData.company.phone">
                <div>Tel:<t t-esc="props.data.headerData.company.phone"/></div>
            </t>
                <t t-if="props.data.headerData.company.vat">
                <div t-esc="vatText"/>
            </t>
                <div t-if="props.data.headerData.company.email" t-esc="props.data.headerData.company.email"/>
                <div t-if="props.data.headerData.company.website" t-esc="props.data.headerData.company.website"/>
        </div>
        <br/>
        <br/>
            <!-- Order Type -->
            <t t-log="'ORDER DATA X :',props.data.orderData"/>
        <div class="pos-receipt-order-type" t-if="props.data.orderData">
            <div class="pos-receipt-content"><span class="fst-normal fw-bolder me-1">Order type :</span>
                <t t-if="props.data.orderData.order_type=='1'">
                    <span>Pickup</span>
                </t>
                <t t-elif="props.data.orderData.order_type=='2'">
                    <span>Delivery</span>
                </t>
            </div>
        </div>
            <!-- Payment Type -->
        <div class="pos-receipt-payment-type" t-if="props.data.orderData">
            <div class="pos-receipt-content"><span class="fst-normal fw-bolder me-1">Payment type :</span>
                <t t-if="props.data.orderData.order_payment_type=='0'">
                    <span>Credit Card Online</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='1'">
                    <span>Cash</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='2'">
                    <span>On Delivery</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='3'">
                    <span>Online</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='4'">
                    <span>Credit Card at Door</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='5'">
                    <span>PIN at Door</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='6'">
                    <span>Voucher at Door</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='7'">
                    <span>Meal Voucher</span>
                </t>
                <t t-elif="props.data.orderData.order_payment_type=='8'">
                    <span>Bank Contact</span>
                </t>
            </div>
        </div>
            <!-- Customer Note -->
            <div class="pos-receipt-customer-note" t-if="props.data.orderData">
            <div class="pos-receipt-content"><span class="fst-normal fw-bolder me-1">Note :</span>
                <span t-esc="props.data.orderData.note"/></div>
        </div>
            <br/>
            <div class="pos-receipt-orderlines">
            <t t-foreach="props.data.orderlines" t-as="orderLine" t-key="orderLine.productName">
                <li class="orderline p-2 lh-sm cursor-pointer">
                    <div class="d-flex justify-content-between">
                        <div class="product-name d-inline-block flex-grow-1 fw-bolder pe-1 text-truncate">
                            <span class="text-wrap" t-esc="orderLine.productName"/>
                        </div>
                        <div class="product-price d-inline-block text-end price">
                            <span class="me-1">x</span>
                            <span class="qty fst-normal fw-bolder me-1" t-esc="orderLine.qty"/>
                            <span t-esc="orderLine.unit"/>
                        </div>
                    </div>
                </li>
            </t>
        </div>
            <br/>
            <div class="pos-receipt-order-data">
            <p>Powered by Apptology</p>
                <div t-esc="props.data.name"/>
                <div id="order-date" t-esc="props.data.date"/>
        </div>
        </div>
    </t>
</templates>