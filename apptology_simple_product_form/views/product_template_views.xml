<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone simple form for POS Products -->
    <record id="view_product_template_simple_form" model="ir.ui.view">
        <field name="name">product.template.simple.form.apptology</field>
        <field name="model">product.template</field>
        <field name="priority" eval="100"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <group string="Basic Info">
                        <group>
                            <field name="name" required="1"/>
                            <field name="image_1920" widget="image" required="1"/>
                            <field name="categ_id" required="1"/>
                            <field name="tmpl_sh_topping_group_ids" widget="many2many_tags" required="1"/>
                            <field name="tmpl_sh_topping_ids" widget="many2many_tags" required="1"/>
                            <field name="description_sale" string="Description" placeholder="Short description" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- POS Products action that uses the simple form -->
    <record id="action_pos_products_simple" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_template_simple_form"/>
        <field name="context">{
            'search_default_available_in_pos': 1,
            'default_available_in_pos': 1
        }</field>
        <field name="domain">[("available_in_pos", "=", True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create POS Products.</p>
        </field>
    </record>

    <!-- Redirect the POS Products menu to our simple action -->
    <record id="point_of_sale.menu_pos_products" model="ir.ui.menu">
        <field name="action" ref="action_pos_products_simple"/>
    </record>
</odoo>
