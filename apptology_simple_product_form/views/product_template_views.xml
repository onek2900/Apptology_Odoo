<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone simple form for POS Products -->
    <record id="view_product_template_simple_form" model="ir.ui.view">
        <field name="name">product.template.simple.form.apptology</field>
        <field name="model">product.template</field>
        <field name="priority" eval="100"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <group>
                        <!-- Left column: main details -->
                        <group>
                            <field name="name" required="1"/>
                            <field name="categ_id" required="1"/>
                            <field name="description_sale" string="Description" placeholder="Enter a description of this item. Describe details like features, options and measurements." required="1"/>

                            <!-- Collapsible Modifier groups section -->
                            <div class="o_accordion my-2 app-simple-modifier-accordion">
                                <div class="d-flex align-items-center justify-content-between">
                                    <a role="button"
                                       class="accordion-toggle d-flex align-items-center fw-bold text-decoration-none"
                                       data-bs-toggle="collapse"
                                       href="#modifier_groups_collapse"
                                       aria-expanded="false"
                                       aria-controls="modifier_groups_collapse">
                                        <span>Modifier groups</span>
                                        <i class="fa fa-chevron-down chevron ms-2" aria-hidden="true"></i>
                                    </a>
                                    <span class="text-muted">Sort items</span>
                                </div>
                                <div id="modifier_groups_collapse" class="collapse o_accordion_values mt-2">
                                    <div class="text-muted mb-2 o_form_label">Add modifier groups to allow customers to modify this product.</div>
                                    <field name="tmpl_sh_topping_group_ids" widget="many2many_tags"/>
                                    <field name="tmpl_sh_topping_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </group>

                        <!-- Right column: image and price -->
                        <group>
                            <separator string="Image"/>
                            <field name="image_1920" widget="image"/>

                            <separator string="Prices"/>
                            <field name="list_price" string="Sale Price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action: open simplified create form directly (no list) -->
    <record id="action_pos_products_simple" model="ir.actions.act_window">
        <field name="name">Add Product</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_product_template_simple_form"/>
        <field name="context">{
            'default_available_in_pos': 1
        }</field>
        <field name="target">current</field>
    </record>

    <!-- New menu under POS Catalog to add a product using the simplified form -->
    <menuitem id="menu_pos_add_product_simple"
              name="Add Product"
              parent="point_of_sale.pos_config_menu_catalog"
              action="action_pos_products_simple"
              sequence="25"/>

    <!-- Server Action on product list: Action menu entry to open simple create -->
    <record id="action_server_open_simple_product_create" model="ir.actions.server">
        <field name="name">Add Product (Simple)</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list,kanban</field>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'Add Product (Simple)',
    'res_model': 'product.template',
    'view_mode': 'form',
    'views': [(env.ref('apptology_simple_product_form.view_product_template_simple_form').id, 'form')],
    'target': 'current',
    'context': {
        'default_available_in_pos': 1,
    },
}
        </field>
    </record>
</odoo>
