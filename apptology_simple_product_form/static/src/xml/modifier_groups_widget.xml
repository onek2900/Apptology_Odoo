<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="apptology_simple_product_form.ModifierGroupsField">
        <div class="app-modifier-groups-widget">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="group-header fw-bold">Modifier groups</div>
            </div>
            <!-- Group picker: choose from existing topping groups -->
            <div class="group-picker mb-3">
                <t t-foreach="state.allGroups" t-as="g" t-key="g.id">
                    <span t-attf-class="group-pill #{(props.value || []).map(r=>r.id||r).includes(g.id) ? 'selected' : ''}"
                          t-on-click.stop.prevent="onGroupChipClick(g.id)">
                        <t t-esc="g.name"/>
                    </span>
                </t>
            </div>
            <t t-if="state.loading">
                <span class="text-muted">Loadingâ€¦</span>
            </t>
            <t t-else="">
                <t t-if="state.groups.length">
                    <t t-foreach="state.groups" t-as="grp" t-key="grp.id">
                        <div class="modifier-group-block">
                            <div class="group-title d-flex align-items-center" role="button"
                                 t-att-aria-expanded="state.expanded[grp.id] ? 'true' : 'false'"
                                 t-on-click.stop="() => toggleGroup(grp.id)">
                                <i class="fa fa-chevron-down chevron me-2" aria-hidden="true"></i>
                                <span><t t-esc="grp.name"/></span>
                            </div>
                            <div t-attf-class="group-toppings #{state.expanded[grp.id] ? 'open' : 'closed'}">
                                <t t-foreach="grp.toppinds_ids" t-as="tid" t-key="tid">
                                    <t t-set="top" t-value="state.toppingsById[tid]"/>
                                    <span t-if="top" t-attf-class="topping-pill #{props.readonly ? 'readonly' : ''} #{isSelected(tid) ? 'selected' : ''}"
                                          t-on-click.stop.prevent="onToppingClick(tid)">
                                        <t t-esc="top.name"/>
                                    </span>
                                </t>
                            </div>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <div class="text-muted">No modifier groups selected.</div>
                </t>
            </t>
        </div>
    </t>
</templates>
