<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="apptology_simple_product_form.ModifierGroupsField">
        <div class="app-modifier-groups-widget">
            <t t-if="state.loading">
                <span class="text-muted">Loadingâ€¦</span>
            </t>
            <t t-else="">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="fw-bold">Modifier Groups</span>
                    <a t-if="!props.readonly" href="#" class="btn btn-sm btn-outline-danger" t-on-click.prevent.stop="clearAllGroups()">Clear all</a>
                </div>
                <t t-if="state.groups.length">
                    <t t-foreach="state.groups" t-as="grp" t-key="grp.id">
                        <div class="modifier-group-block">
                            <div class="group-title d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center" role="button"
                                     t-att-aria-expanded="state.expanded[grp.id] ? 'true' : 'false'"
                                     t-on-click.stop="toggleGroup(grp.id)">
                                    <i class="fa fa-chevron-down chevron me-2" aria-hidden="true"></i>
                                    <span><t t-esc="grp.name"/></span>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <t t-set="meta" t-value="groupSelectionMeta(grp)"/>
                                    <span t-att-class="`small selection-count ${meta.statusClass}`">
                                        <t t-esc="meta.selected"/>/<t t-esc="meta.total"/>
                                    </span>
                                    <span t-if="meta.requirementText" class="text-muted small">
                                        (<t t-esc="meta.requirementText"/>)
                                    </span>
                                    <a t-if="!props.readonly" href="#" class="small" t-on-click.prevent.stop="selectAllInGroup(grp.id)">Select all</a>
                                    <a t-if="!props.readonly" href="#" class="small text-warning" t-on-click.prevent.stop="clearGroup(grp.id)">Clear</a>
                                    <a t-if="!props.readonly" href="#" class="text-danger small" title="Remove group" t-on-click.prevent.stop="onRemoveGroup(grp.id)">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                            <div t-attf-class="group-toppings #{state.expanded[grp.id] ? 'open' : 'closed'}">
                                <t t-foreach="grp.toppinds_ids" t-as="tid" t-key="tid">
                                    <t t-set="top" t-value="state.toppingsById[tid]"/>
                                    <div t-if="top" class="topping-row" t-on-click.stop.prevent="onToppingClick(tid)">
                                        <i t-att-class="isSelected(tid) ? 'fa fa-check-square-o me-2' : 'fa fa-square-o me-2'" aria-hidden="true"></i>
                                        <span><t t-esc="top.name"/></span>
                                    </div>
                                </t>
                                <!-- Toppings can be managed in the group form; no inline add dialog here -->
                            </div>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <div class="text-muted">No modifier groups selected.</div>
                </t>
            </t>
        </div>
    </t>
</templates>
