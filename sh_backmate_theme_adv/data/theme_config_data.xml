<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- TODO: no update 1 when done -->
    <data noupdate="1">
        
        
        
        <!--
        
        	 one attachment for scss variable settings 
        	Write this file each time when we change theme settings.
        	include this file in assets file by url.
        	
         -->
        <record id="sh_back_theme_config_settings_attachment_scss_file" model="ir.attachment">
            <field name="public" eval="True"/>
            <field name="name">Back Theme Settings scss File</field>
        	<field name="datas" type="base64" file="sh_backmate_theme_adv/data/back_theme_config_main_scss.scss"></field>            
            <field name="res_model">ir.ui.view</field>
            <field name="type">binary</field>
            <field name="mimetype">text/scss</field>
            
            <field name="url">/sh_backmate_theme_adv/static/src/scss/back_theme_config_main_scss.scss</field>
        </record>  
        
        
        <record id="sh_back_theme_config_adv_attachment_predefined_theme_1" model="ir.attachment">
            <field name="public" eval="True"/>
            <field name="name">Predefined Theme 1</field>
        	<field name="datas" type="base64" file="sh_backmate_theme_adv/static/src/img/login/login_bg.png"></field>            
            <field name="res_model">ir.ui.view</field>
            <field name="type">binary</field>
            <field name="mimetype">text/png</field>
            
            <field name="url">/sh_backmate_theme_adv/static/src/img/login/login_bg.png</field>
        </record>    
                
        
        <!-- Create back theme setting record at install time -->
        <record id="sh_back_theme_config_rec" model="sh.back.theme.config.settings">
            <field name="name">Theme Settings</field> 

            <field name="primary_color">#111c43</field>
            <field name="kanban_box_style">style_1</field>
            <field name="secondary_color">#FFFFFF</field>
            <field name="secondary_hover">#EEEEEE</field>
            <field name="secondary_active">#EEEEEE</field>
            <field name="header_background_color">#ebedf6</field>
            <field name="body_background_color">#ebedf6</field>
            <field name="header_font_color">#111c43</field>
            <field name="sidebar_background_color">#111c43</field>
            <field name="sidebar_background_style">color</field>
            <field name="sidebar_font_color">#e2e8f0</field>
            <field name="sidebar_collapse_style">collapsed</field>
            	
            <field name="separator_color">#111c43</field>
            <field name="icon_style">light_icon</field>
            <field name="dual_tone_icon_color_1">#A3A5B7</field>
            <field name="dual_tone_icon_color_2">#2C3782</field>
            <field name="separator_style">style_7</field>
            <field name="button_style">style_4</field>
            <field name="checkbox_style">style_2</field>
            <field name="radio_btn_style">style_1</field>
            <field name="scrollbar_style">style_1</field>
     
            <field name="body_background_image" type="base64" file="sh_backmate_theme_adv/static/src/img/background/body_bg.jpg"/> 
            <field name="sidebar_background_image" type="base64" file="sh_backmate_theme_adv/static/src/img/background/businessmen-Copy.jpg"/> 
