<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <!-- Extend the ActionpadWidget template -->
  <t t-extend="point_of_sale.ActionpadWidget">
    <t t-jquery="button.order-button" t-operation="replace">
      <button class="order-button" t-att-class="{'highlight': kitchenState.hasPending}">
        <t t-if="kitchenState.hasPending">
          Order (Changes)
        </t>
        <t t-else="">
          Order
        </t>
      </button>
    </t>
  </t>

</templates>
